{
  "name": "pump.io",
  "preferGlobal": "true",
  "homepage": "http://pump.io/",
  "version": "4.0.0-alpha.0",
  "author": "Evan Prodromou <evan@e14n.com>",
  "description": "Social server with an ActivityStreams API",
  "devDependencies": {
    "dependency-check": "^2.8.0",
    "jscs": "^3.0.3",
    "jshint": "^2.9.2",
    "jsonlint": "^1.6.2",
    "node-mocks-http": "^1.6.1",
    "pug-lint": "^2.3.0",
    "rimraf": "^2.6.1",
    "simplesmtp": "^0.3.35",
    "vows": "^0.8.1",
    "xml2js": "^0.4.17",
    "zombie": "^3.1.1"
  },
  "dependencies": {
    "bcrypt": "0.8.x",
    "body-parser": "^1.15.2",
    "bunyan": "^1.8.1",
    "colors": "^1.1.2",
    "compression": "^1.6.2",
    "connect-auth": "git://github.com/e14n/connect-auth.git#ae4e3c4c86a5d266be7bd91c2b99856f9a37b1ec",
    "connect-databank": "^1.0.3",
    "connect-multiparty": "^2.0.0",
    "cookie-parser": "^1.4.3",
    "databank": "0.19.x",
    "dateformat": "^2.0.0",
    "dialback-client": "0.2.x",
    "dompurify": "^0.8.3",
    "emailjs": "^1.0.8",
    "express": "^4.14.0",
    "express-session": "^1.14.1",
    "gm": "^1.22.0",
    "helmet": "^3.3.0",
    "jade": "^1.11.0",
    "jankyqueue": "0.1.x",
    "jsdom": "^9.12.0",
    "method-override": "^2.3.6",
    "mkdirp": "0.5.x",
    "oauth-evanp": "~0.9.10-evanp.2",
    "octal": "^1.0.0",
    "optimist": "^0.6.1",
    "sanitize-html": "^1.13.0",
    "schlock": "~0.2.1",
    "send": "^0.15.1",
    "serve-favicon": "^2.3.0",
    "showdown": "^1.4.1",
    "sockjs": "0.3.x",
    "ssl-config": "^1.0.0",
    "step": "^1.0.0",
    "ua-parser-js": "^0.7.10",
    "underscore": "1.8.x",
    "underscore-contrib": "0.3.x",
    "uuid": "^3.0.0",
    "validator": "^7.0.0",
    "webfinger": "~0.4.2",
    "yargs": "^7.0.2"
  },
  "bin": {
    "pump": "./bin/pump",
    "pump-authorize": "./bin/pump-authorize",
    "pump-follow": "./bin/pump-follow",
    "pump-post-note": "./bin/pump-post-note",
    "pump-register-app": "./bin/pump-register-app",
    "pump-register-user": "./bin/pump-register-user",
    "pump-stop-following": "./bin/pump-stop-following"
  },
  "man": [
    "./doc/pump.1"
  ],
  "scripts": {
    "build": "for i in public/template/*.jade; do test \\( ! -e $i.js \\) -o $i -nt $i.js && jade --client --extension jade.js --no-debug $i; done || true",
    "fullbuild": "jade --client --extension jade.js --no-debug public/template",
    "test": "npm run lint && npm run test:vows",
    "test:vows": "vows -v test/*-test.js",
    "test:root": "vows -v test/*-test-as-root.js",
    "test:install": "npm install -g .",
    "lint": "npm run lint:jshint && npm run lint:jscs && npm run lint:jade && npm run lint:json && npm run lint:deps",
    "lint:deps": "dependency-check package.json && dependency-check --unused --no-dev package.json",
    "lint:jshint": "jshint --exclude 'public/javascript/libs' bin/* routes public/javascript",
    "lint:jscs": "jscs bin/* lib public/javascript/pump* routes test",
    "lint:jade": "pug-lint public/template/*.jade",
    "lint:json": "jsonlint -q package.json pump.io.json.sample",
    "start": "./bin/pump",
    "update-docs": "for doc in copyright manpage readme; do npm run update-docs:$doc; done",
    "update-docs:copyright": "for i in README.md doc/pump.1; do sed -E \"s/2011-20[[:digit:]]{2}/2011-$(date +%Y)/g\" $i | sponge $i; done",
    "update-docs:manpage": "sed \"s/^\\.TH PUMP 1.*$/.TH PUMP 1 \\\"$(date +'%d %B %Y')\\\" \\\"$npm_package_version\\\"/\" doc/pump.1 | sponge doc/pump.1",
    "update-docs:readme": "sed \"s/^Version .*\\..*\\..*$/Version $npm_package_version/\" README.md | sponge README.md",
    "version": "npm run update-docs && git add README.md doc/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/pump-io/pump.io.git"
  },
  "keywords": [
    "activitystreams",
    "socialnetwork",
    "social",
    "pump",
    "streams",
    "api",
    "app",
    "server"
  ],
  "license": "Apache-2.0",
  "engines": {
    "node": ">=4 <7",
    "npm": ">=2"
  },
  "greenkeeper": {
    "ignore": [
      "connect-auth",
      "databank",
      "zombie"
    ]
  }
}
